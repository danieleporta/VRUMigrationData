<process name="EventConsumer"
         targetNamespace="http://xmlns.oracle.com/VRUMigration/VRUMIgrationCheck/EventConsumer"
         xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:client="http://xmlns.oracle.com/VRUMigration/VRUMIgrationCheck/EventConsumer"
         xmlns:ora="http://schemas.oracle.com/xpath/extension"
         xmlns:ui="http://xmlns.oracle.com/soa/designer"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://xmlns.oracle.com/VRUMigration/VRUMIgrationCheck/EventTrigger"
         xmlns:ns2="http://xmlns.oracle.com/singleString"
         xmlns:ns3="http://xmlns.oracle.com/VRUMigration/VRUMIgrationCheck/EventDefinition1">
    <import namespace="http://xmlns.oracle.com/singleString" location="../Schemas/EventTrigger.xsd"
            importType="http://www.w3.org/2001/XMLSchema"/>
    <import ui:processWSDL="true" namespace="http://xmlns.oracle.com/VRUMigration/VRUMIgrationCheck/EventConsumer" location="../WSDLs/EventConsumer.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
    <partnerLinks>
        <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
        <partnerLink name="eventconsumer_client" partnerLinkType="client:EventConsumer" myRole="EventConsumerProvider" partnerRole="EventConsumerRequester"/>
    </partnerLinks>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        VARIABLES                                                        
        List of messages and XML documents used within this BPEL process 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <variables>
        <!-- Reference to the message passed as input during initiation -->
        <variable name="inputVariable" messageType="client:EventConsumerRequestMessage"/>

        <!-- Reference to the message that will be sent back to the requester during callback -->
        <variable name="outputVariable" messageType="client:EventConsumerResponseMessage"/>
        <variable name="Invoke1_InputVariable" element="ns2:process"/>
    </variables>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
       ORCHESTRATION LOGIC                                               
       Set of activities coordinating the flow of messages across the    
       services integrated within this business process                  
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <sequence name="main">
        <!-- Receive input from requestor. (Note: This maps to operation defined in EventConsumer.wsdl) -->
        <receive name="receiveInput" partnerLink="eventconsumer_client" portType="client:EventConsumer" operation="process" variable="inputVariable" createInstance="yes"/>
        <invoke name="Invoke1" bpelx:eventName="ns3:Event1"
                inputVariable="Invoke1_InputVariable" bpelx:invokeAsDetail="no"/>
        <!-- 
          Asynchronous callback to the requester. (Note: the callback location and correlation id is transparently handled using WS-addressing.)
        -->
        <invoke name="callbackClient" partnerLink="eventconsumer_client" portType="client:EventConsumerCallback" operation="processResponse" inputVariable="outputVariable"/>
    </sequence>
</process>